stages:
  - build
  - deploy


publish-to-gh-pages:
  stage: build
  before_script:
    - echo 'Publishing to gh-pages branch'
  script:
    - git subtree split --branch gh-pages --prefix book/_build/html

pages:
  stage: deploy
  before_script:
    - echo 'Building new release ml pages.'
  script:
    - cd /builds/$CI_PROJECT_PATH
    - mkdir public
    - mv html/* public/
  artifacts:
    paths:
      - public
  only:
    - gh-pages
